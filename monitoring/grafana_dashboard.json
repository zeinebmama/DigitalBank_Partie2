{
  "dashboard": {
    "title": "DigitalBank - Fraud Detection Monitoring",
    "tags": ["fraud-detection", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage (%)",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "yaxes": [{"format": "percent", "max": 100}]
      },
      {
        "id": 2,
        "title": "Memory Usage (%)",
        "type": "graph",
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "yaxes": [{"format": "percent", "max": 100}]
      },
      {
        "id": 3,
        "title": "Disk Usage (%)",
        "type": "graph",
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes{fstype!~\"tmpfs|fuse.lxcfs\"} - node_filesystem_free_bytes) / node_filesystem_size_bytes * 100",
            "legendFormat": "{{mountpoint}}"
          }
        ],
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "yaxes": [{"format": "percent", "max": 100}]
      },
      {
        "id": 4,
        "title": "PostgreSQL Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8}
      },
      {
        "id": 5,
        "title": "API Requests per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(flask_http_request_total[1m])",
            "legendFormat": "{{endpoint}} - {{status}}"
          }
        ],
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8}
      },
      {
        "id": 6,
        "title": "API Response Time (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(flask_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "yaxes": [{"format": "s"}]
      },
      {
        "id": 7,
        "title": "Fraud Detection Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(fraud_detection_total{is_fraud=\"true\"}[5m]) / rate(fraud_detection_total[5m]) * 100"
          }
        ],
        "gridPos": {"x": 0, "y": 24, "w": 6, "h": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 30, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Average Fraud Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "fraud_score_average"
          }
        ],
        "gridPos": {"x": 6, "y": 24, "w": 6, "h": 4},
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.5, "color": "yellow"},
                {"value": 0.8, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "API Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(flask_http_request_total{status=~\"5..\"}[5m])",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8}
      },
      {
        "id": 10,
        "title": "System Load Average",
        "type": "graph",
        "targets": [
          {
            "expr": "node_load1",
            "legendFormat": "1min"
          },
          {
            "expr": "node_load5",
            "legendFormat": "5min"
          },
          {
            "expr": "node_load15",
            "legendFormat": "15min"
          }
        ],
        "gridPos": {"x": 0, "y": 32, "w": 12, "h": 8}
      }
    ],
    "refresh": "30s",
    "time": {"from": "now-1h", "to": "now"}
  }
}
